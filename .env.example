# ============================================================================
# DATABASE CONNECTION POOL SETTINGS
# ============================================================================

# Connection pool size (default: 5)
DB_POOL_SIZE=5

# Maximum overflow connections (default: 10)
DB_MAX_OVERFLOW=10

# Connection timeout in seconds (default: 30)
DB_POOL_TIMEOUT=30

# Connection recycle time in seconds (default: 3600 = 1 hour)
DB_POOL_RECYCLE=3600

# Echo SQL queries to console (true/false, default: false)
# Set to true for debugging
DB_ECHO_SQL=false

# ============================================================================
# XUMM WALLET INTEGRATION (FRONTEND)
# ============================================================================

# XUMM API credentials for wallet connection
# Get these from: https://apps.xumm.dev/
NEXT_PUBLIC_XUMM_API_KEY=your_xumm_api_key
NEXT_PUBLIC_XUMM_API_SECRET=your_xumm_api_secret

# ============================================================================
# XRPL CONFIGURATION
# ============================================================================

# XRPL Network (testnet or mainnet)
XRPL_NETWORK=testnet

# XRPL Node URL (optional, uses defaults if not set)
# XRPL_TESTNET_URL=wss://s.altnet.rippletest.net:51233
# XRPL_MAINNET_URL=wss://xrplcluster.com

# ============================================================================
# RLUSD CONFIGURATION (Ripple USD Stablecoin)
# ============================================================================

# RLUSD Testnet Issuer Address
# This is the official RLUSD issuer on XRP Ledger testnet
RLUSD_ISSUER=rQhWct2fv4Vc4KRjRgMrxa8xPN9Zx9iLKV

# RLUSD Currency Code
RLUSD_CURRENCY=RLUSD

# RLUSD Mainnet Issuer (for production use)
# Uncomment and use this for mainnet deployment
# RLUSD_ISSUER=rMxCKbEDwqr76QuheSUMdEGf4B9xJ8m5De

# Notes:
# - RLUSD requires trust lines: Users must set up trust line to RLUSD issuer before receiving RLUSD
# - Default trust line limit: 1,000,000 RLUSD
# - RLUSD uses issued currency mechanics on XRPL
# - Testnet RLUSD has no real-world value and is for testing only

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Base URL
API_BASE_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Secret key for JWT authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# ============================================================================
# SECURITY NOTES
# ============================================================================
